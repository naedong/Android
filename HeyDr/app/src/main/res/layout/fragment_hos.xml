<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_hos"
    tools:context=".view.search.hospital.frag.HosFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|left"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textColor="@color/white"

            android:fontFamily="@font/font"
            android:text=" 병원 명"></TextView>

        <TextView
            android:id="@+id/hos_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font"
            android:text=" 병원 명"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="35dp"
            android:text="주소"
            android:fontFamily="@font/font"
            android:textColor="@color/white"></TextView>
        <TextView
            android:id="@+id/hos_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font"
            android:text=" 주소 명"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="35dp"
            android:text="진료 과목"
            android:fontFamily="@font/font"
            android:textColor="@color/white"></TextView>
        <TextView
            android:id="@+id/hos_shop_ginro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font"
            android:text=" 진료 명"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="35dp"
            android:text="영업 시간"
            android:fontFamily="@font/font"
            android:textColor="@color/white"></TextView>
        <TextView
            android:id="@+id/hos_shop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font"
            android:text=" 오픈 시간 ~ 클로즈 타임"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="35dp"
            android:text="전화 번호"
            android:fontFamily="@font/font"
            android:textColor="@color/white"></TextView>
        <TextView
            android:id="@+id/hos_shop_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font"
            android:text=" 전화번호"></TextView>


    </LinearLayout>

</FrameLayout>