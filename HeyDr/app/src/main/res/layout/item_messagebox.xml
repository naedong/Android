<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/item_messagebox_root" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/item_messagebox_LinearLayout" android:layout_marginLeft="10dp" android:gravity="center">

    <ImageView android:layout_height="50dp" android:layout_width="50dp" android:id="@+id/item_messagebox_ImageView_profile"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/item_messagebox_TextView_name"/>

</LinearLayout>


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="wrap_content">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content">
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/item_messagebox_textview_readCounterLeft" android:visibility="invisible" android:textColor="@color/colorAccent" android:textSize="9dp" android:text="1"/>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@color/black" android:id="@+id/item_messagebox_textview_msg" android:text="-"/>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/item_messagebox_textview_readCounterRight" android:visibility="invisible" android:textColor="@color/colorAccent" android:textSize="9dp" android:text="1"/>
</LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/item_messagebox_layout_timestamp">
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/item_messagebox_textview_timestamp" android:textSize="9sp" android:text="-" android:layout_gravity="right"/>
</LinearLayout>

</LinearLayout>

</LinearLayout>